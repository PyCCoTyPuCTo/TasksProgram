@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TasksProgram.Models.Task

@using (Html.BeginForm())
{
        @Html.HiddenFor(m => m.ID)
        <p>
            @Html.LabelFor(m => m.Title)
